public class ClearIBit {
    public static int clearIBit(int n, int i) {
        int bitMask = (~0) << i; // ~0 = -1; Therefore, "(~0)<<i" can be also written as "(-1)<<i";
        return n & bitMask;
    }

    public static void main(String args[]) {
        System.out.println(updateIthBit(10, 2, 1));
    }
}
