public class CheckOddOrEven {
    // Check if the number is Odd or Even
    public static void isOddOrEven(int n) {
        int bitMask = 1;
        if ((n & bitMask) == 0) {
            // Even case
            System.out.println("Even Number");
        } else {
            // Odd case
            System.out.println("Odd number");
        }
    }

    public static void main(String args[]) {
        isOddOrEven(3);
        isOddOrEven(16);
    }
}
